"""
Pipeline to generate and download input files for v5q variant benchmark set manuscript
"""

from snakemake.utils import min_version, validate

min_version("8.0")


configfile: "config/config.yaml"


wrapper_prefix = "v3.3.3"


rule all:
    input:
        config["outputs"]["sv_len"],
        # RTG vcfstats for all benchmark sets
        expand(
            "{rtg_dir}/{{benchmark}}_vcfstats.txt".format(
                rtg_dir=config["outputs"]["rtg_stats_dir"]
            ),
            benchmark=config["benchmarksets"].keys(),
        ),


include: "rules/vcf_processing.smk"
