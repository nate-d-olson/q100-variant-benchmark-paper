{
  "permissions": {
    "allow": [
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(git:*)",
      "Skill(ralph-loop:cancel-ralph)",
      "Skill(ralph-loop:cancel-ralph:*)",
      "WebFetch(domain:github.com)",
      "Skill(superpowers:executing-plans)",
      "Bash(snakemake:*)",
      "Bash(snakefmt:*)",
      "WebSearch",
      "Bash(Rscript:*)",
      "Bash(micromamba activate:*)",
      "WebFetch(domain:truvari.readthedocs.io)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(gh pr create:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "WebFetch(domain:api.github.com)",
      "Bash(micromamba list:*)",
      "Bash(micromamba run:*)",
      "Bash(ls:*)",
      "Bash(tee:*)",
      "Bash(gh pr view:*)",
      "Bash(gh api:*)",
      "WebFetch(domain:api.github.com)",
      "Bash(source:*)",
      "Bash(python:*)",
      "Bash(grep:*)",
      "Bash(bcftools view:*)",
      "Bash(pip uninstall:*)",
      "Bash(pip install:*)",
      "Bash(quarto render:*)",
      "Bash(micromamba env:*)",
      "Bash(micromamba search:*)",
      "Bash(micromamba update:*)",
      "Bash(micromamba install:*)",
      "Bash(conda run:*)",
      "Bash(~/.local/bin/snakemake --version)",
      "Bash(/Users/nolson/.local/share/mamba/envs/q100-smk/bin/snakemake --lint)",
      "Bash(ruff:*)",
      "Bash(pytest:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(echo:*)",
      "Bash(make:*)",
      "WebFetch(domain:giab-data.s3.amazonaws.com)",
      "Bash(gh workflow:*)",
      "Skill(commit-commands:commit-push-pr)",
      "Bash(gh run watch:*)",
      "Bash(gh pr checks:*)",
      "mcp__plugin_github_github__push_files",
      "mcp__plugin_github_github__create_pull_request",
      "mcp__plugin_github_github__search_pull_requests",
      "mcp__plugin_github_github__list_pull_requests",
      "Bash(gh issue view:*)",
      "Bash(gh issue close:*)",
      "Bash(gh pr close:*)",
      "Bash(gh pr merge:*)",
      "mcp__plugin_github_github__merge_pull_request"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "github"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "filepath=\"$CLAUDE_FILE_PATH\"; if [[ \"$filepath\" == *.R || \"$filepath\" == *.r ]]; then air format \"$filepath\" 2>/dev/null; fi"
          },
          {
            "type": "command",
            "command": "filepath=\"$CLAUDE_FILE_PATH\"; if [[ \"$filepath\" == *.py ]]; then ruff format \"$filepath\" 2>/dev/null; fi"
          },
          {
            "type": "command",
            "command": "filepath=\"$CLAUDE_FILE_PATH\"; if [[ \"$filepath\" == *.smk || \"$filepath\" == */Snakefile ]]; then micromamba run -n q100-smk snakefmt \"$filepath\" 2>/dev/null; fi"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "filepath=\"$CLAUDE_FILE_PATH\"; case \"$filepath\" in */config/schema/*.yaml|*/.markdownlint*) echo 'BLOCK: This is a protected file. Please confirm with the user before editing.'; exit 2;; esac; exit 0"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
