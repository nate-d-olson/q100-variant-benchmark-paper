{
  "permissions": {
    "allow": [
      "Bash(python3 calculate_genome_sizes.py)",
      "Bash(micromamba run -n q100-smk python calculate_genome_sizes.py)",
      "Bash(/Users/nolson/micromamba/envs/q100-smk/bin/python calculate_genome_sizes.py)",
      "Bash(wc:*)",
      "Bash(tree:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Skill(ralph-loop:cancel-ralph)",
      "Skill(ralph-loop:cancel-ralph:*)",
      "WebFetch(domain:github.com)",
      "Skill(superpowers:executing-plans)",
      "Bash(snakemake:*)",
      "Bash(snakefmt:*)",
      "WebSearch",
      "Bash(Rscript:*)",
      "Bash(micromamba activate:*)",
      "WebFetch(domain:truvari.readthedocs.io)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "Bash(gh pr create:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(micromamba list:*)",
      "Bash(micromamba run:*)",
      "Bash(ls:*)",
      "Bash(tee:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "context7",
    "github"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "filepath=\"$CLAUDE_FILE_PATH\"; if [[ \"$filepath\" == *.R || \"$filepath\" == *.r ]]; then air format \"$filepath\" 2>/dev/null; fi"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "filepath=\"$CLAUDE_FILE_PATH\"; case \"$filepath\" in */config/schema/*.yaml|*/.markdownlint*) echo 'BLOCK: This is a protected file. Please confirm with the user before editing.'; exit 2;; esac; exit 0"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
